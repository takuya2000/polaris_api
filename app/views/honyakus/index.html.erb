<h1>Listing honyakus</h1>

<table>
  <thead>
    <tr>
      <th>Question body</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @honyakus.each do |honyaku| %>
      <tr>
        <td><%= honyaku.question_body %></td>
        <td><%= honyaku.name %></td>
        <td><%= link_to 'Show', honyaku %></td>
        <td><%= link_to 'Edit', edit_honyaku_path(honyaku) %></td>
        <td><%= link_to 'Destroy', honyaku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

